{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://aistechspace.github.io/atds-stac-extensions/v0.0.1/schema.json",
    "title": "ATDS Extension",
    "description": "STAC ATDS Extension for STAC Items and STAC Collections.",
    "allOf": [
      {
        "$comment": "This is the schema for STAC Items.",
        "type": "object",
        "required": [
          "type"
        ],
        "properties": {
          "type": {
            "const": "Feature"
          },
          "properties": {
            "allOf": [
              {
                "required": [
                  "atds:project",
                  "atds:organization"
                ]
              },
              {
                "$ref": "#/definitions/atds_fields"
              }
            ]
          }
        }
      },
      {
        "$ref": "#/definitions/stac_extensions"
      }
    ],
    "definitions": {
      "stac_extensions": {
        "type": "object",
        "required": [
          "stac_extensions"
        ],
        "properties": {
          "stac_extensions": {
            "type": "array",
            "contains": {
              "const": "https://aistechspace.github.io/atds-stac-extensions/v0.0.1/schema.json"
            }
          }
        }
      },
      "atds_fields": {
          "type": "object",
          "properties": {
            "atds:project": {
              "$ref": "#/definitions/atds:project"
            },
            "atds:organization": {
              "$ref": "#/definitions/atds:organization"
            }
          }
        },
        "atds:project": {
          "type": "string",
          "minLength": 1
        },
        "atds:organization": {
          "type": "string",
          "minLength": 1
        }
    }
  }